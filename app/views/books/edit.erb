<h1>Edit <%= @book.title %></h1>

<form method="post" action="/books/<%= @book.id %>">
    <div>
        <input type="hidden" name="_method" value="patch">
        <p>
            <label for="title">Title:</label><br>
            <input name="title" id="title" value="<%= @book.title %>">
        </p>
        <p>
            <label for="author">Author:</label><br>
            <input name="author" id="author" value="<%= @book.author %>">
        </p>
        <p>
            <label for="status">Status:</label><br>
            <input type="radio" name="status" value="Unread">
            <label for="unread">Unread</label>
            <input type="radio" name="status" value="Reading">
            <label for="reading">Reading</label>
            <input type="radio" name="status" value="Read">
            <label for="read">Read</label>
            <input type="radio" name="status" value="">
            <label for="other">Other</label>
        </p>
        <p>
            <label for="genre_id">Genre:</label>
            <select id="genre_id" name="genre_id">
                <option value="">Select</option>
                <% @genres.each do |genre| %>
                    <option value="<%= genre.id %>"><%= genre.name %></option>
                <% end %>
            </select>
        </p>
    </div>

    </div>
    <input type="submit" id="submit" value="Update Book">
</form>